<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_back"
    android:padding="36dp"
    android:gravity="center"
    tools:context="saim.com.trainticket.Activity.FareQuery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputFromList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:text="Select From Location"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_round"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_expand"/>

        <TextView
            android:id="@+id/inputToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:text="Select To Location"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_round"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_expand"/>

        <TextView
            android:id="@+id/inputTrainList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:text="Select Train"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_round"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_expand"/>

        <TextView
            android:id="@+id/inputTicketList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:text="Select Ticket Type"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_round"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_expand"/>

        <Button
            android:id="@+id/btnSearch"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search" />

    </LinearLayout>


</RelativeLayout>
